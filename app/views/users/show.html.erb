<h1>マイページ</h1>

<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image %>
  <% end %>
    <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image %></p>
    <p>タイトル：<%= post.title %></p>
    <p>ショップ名：<%= post.shop_name %></p>
    <p>説明：<%= post.body %></p>
    <p>場所：<%= post.place %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>

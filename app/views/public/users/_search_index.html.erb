<div class="row cols-2 justify-content-center py-5">
  <div class="col-lg-6">
    <% @records.each do |user| %>
      <div class="col-12 d-flex align-items-center text-center py-3 ">
        <div class="col-4">
          <%= image_tag user.get_profile_image(100,100), style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
        </div>
        <div class="col-4">
          <%= user.name %>
        </div>
        <div class="col-4">
          <%= link_to "詳細", user, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
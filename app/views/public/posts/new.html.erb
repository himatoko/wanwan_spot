<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規投稿</h5>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @post.errors.count %>件のエラーが発生しました
            </h6>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @post do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <div class="mb-3 mt-4">
            <%= f.text_field :title, class: "form-control", placeholder: "投稿タイトル" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.text_field :shop_name, class: "form-control", placeholder: "施設名" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.text_field :prefecture, class: "form-control", rows: "3", placeholder: "都道府県" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.text_field :address, class: "form-control", rows: "3", placeholder: "市区町村" %>
          </div>
          <div class=" mb-3 mt-4">
            <%= f.text_field :block, class: "form-control", rows: "3", placeholder: "番地" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.text_area :recommend_point, class: "form-control", rows: "3", placeholder: "おすすめポイント" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.text_area :advice, class: "form-control", rows: "3", placeholder: "行く方へのアドバイス" %>
          </div>
          <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

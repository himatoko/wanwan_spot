<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">投稿内容編集</h5>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @post.errors.count %>件のエラーが発生しました
            </h6>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @post do |f| %>
          <label for="inputTitle">投稿タイトル</label>
          <div class="input-group mb-3 mt-2">
            <%= f.text_field :title, class: "form-control", autofocus: true, id:"inputTitle", placeholder:"投稿タイトル"%>
          </div>
          <label for="inputshopname">施設名</label>
          <div class="input-group mb-3 mt-2">
            <%= f.text_field :shop_name, class: "form-control", autofocus: true, id:"inputshopname",placeholder: "施設名" %>
          </div>
          <label for="inputPrefecture">都道府県</label>
          <div class="input-group mb-3 mt-2">
            <%= f.text_field :prefecture, class: "form-control", autofocus: true, id:"inputPrefecture", placeholder:"都道府県"%>
          </div>
          <label for="inputAddress">市区町村</label>
          <div class="input-group mb-3 mt-2">
            <%= f.text_field :address, class: "form-control", autofocus: true, id:"inputAddress",placeholder: "市区町村" %>
          </div>
          <label for="inputBlock">番地</label>
          <div class="input-group mb-3 mt-2">
            <%= f.text_field :block, class: "form-control", autofocus: true, id:"inputAddress",placeholder: "番地" %>
          </div>
          <label for="inputRecommendpoint">おすすめポイント</label>
          <div class="input-group mb-3 mt-2">
            <%= f.text_area :recommend_point, class: "form-control", autofocus: true, id:"inputRecommendpoint", placeholder:"おすすめポイント"%>
          </div>
          <label for="inputAdvice">行く方へのアドバイス</label>
          <div class="input-group mb-3 mt-2">
            <%= f.text_area :advice, class: "form-control", autofocus: true, id:"inputAdvice",placeholder: "行く方へのアドバイス" %>
          </div>
          <%= f.submit "編集内容を保存", class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>